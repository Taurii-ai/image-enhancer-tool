{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/create-checkout-session.js": {
      "maxDuration": 15
    },
    "api/simple-checkout.js": {
      "maxDuration": 10
    },
    "api/verify-payment.js": {
      "maxDuration": 10
    },
    "api/debug-stripe.js": {
      "maxDuration": 5
    },
    "api/test-env.js": {
      "maxDuration": 5
    }
  },
  "env": {
    "STRIPE_SECRET_KEY": "@stripe-secret-key"
  }
}