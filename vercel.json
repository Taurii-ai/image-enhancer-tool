{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/create-checkout-session.js": {
      "maxDuration": 10
    },
    "api/verify-payment.js": {
      "maxDuration": 10
    },
    "api/webhook.js": {
      "maxDuration": 30
    }
  }
}